datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

enum ProductStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum ReviewRating {
  ONE
  TWO
  THREE
  FOUR
  FIVE
}

model Product {
  id          String        @id() @default(uuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt()
  name        String
  description String?
  price       Float
  status      ProductStatus @default(DRAFT)
  metadata    Json?
  reviews     Review[]
  tags        ProductTag[]
}

model Review {
  id           String       @id() @default(uuid())
  createdAt    DateTime     @default(now())
  title        String
  content      String
  rating       ReviewRating
  verified     Boolean      @default(false)
  helpfulCount Int          @default(0)
  product      Product      @relation(fields: [productId], references: [id])
  productId    String
}

model Tag {
  id       String       @id() @default(uuid())
  name     String       @unique()
  color    String?
  products ProductTag[]
}

model ProductTag {
  product    Product  @relation(fields: [productId], references: [id])
  productId  String
  tag        Tag      @relation(fields: [tagId], references: [id])
  tagId      String
  assignedAt DateTime @default(now())

  @@id([productId, tagId])
}
