{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"lib": ["es2021"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./"
	},
	"include": ["src/**/*", "schema.ts"],
	"exclude": ["node_modules", "dist"]
}
